<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.RegisterFragment">
    <!--scrollView-->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/submitBtn"
        app:layout_constraintEnd_toEndOf="@+id/submitBtn"
        app:layout_constraintStart_toStartOf="@+id/submitBtn"
        app:layout_constraintTop_toTopOf="parent">
        <!--    Container-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/coverImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:padding="@dimen/_20mdp"
                android:src="@drawable/register_logo" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/nameTxtLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxCornerRadiusBottomEnd="@dimen/_15mdp"
                app:boxCornerRadiusBottomStart="@dimen/_15mdp"
                app:boxCornerRadiusTopEnd="@dimen/_15mdp"
                app:boxCornerRadiusTopStart="@dimen/_15mdp"
                app:startIconDrawable="@drawable/ic_round_person_24"
                app:startIconTint="@color/darkGreen"
                android:hint="@string/username"
                app:hintTextColor="@color/moonstoneBlue"
                android:textColor="@color/darkGreen"
                app:boxStrokeWidth="@dimen/_1mdp"
                app:boxStrokeErrorColor="@color/tart_orange"
                app:boxStrokeColor="@color/darkGreen">
                <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/nameEdt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/submitBtn"
        android:layout_width="0dp"
        android:layout_height="@dimen/_45mdp"
        android:layout_margin="@dimen/_15mdp"
        android:backgroundTint="@color/darkGreen"
        android:text="@string/register"
        android:textSize="@dimen/_14font_mdp"
        app:cornerRadius="@dimen/_15mdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>